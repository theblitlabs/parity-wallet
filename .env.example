# RPC Endpoints
SEPOLIA_RPC_URL=https://ethereum-sepolia-rpc.publicnode.com

# Deployment Account
PRIVATE_KEY=your_private_key_here

# Contract Addresses
TOKEN_ADDRESS=0xYourTokenAddressHere    # The ERC20 token contract address
PROXY_ADDRESS=                          # Required for upgrades - leave empty for initial deployment

# Verification
ETHERSCAN_API_KEY=your_etherscan_api_key_here

# Chain IDs (uncomment and set if using multiple networks)
# SEPOLIA_CHAIN_ID=11155111
# MAINNET_CHAIN_ID=1

# Gas Settings (optional - uncomment to override defaults)
# GAS_PRICE=auto
# GAS_LIMIT=3000000

# Contract Owner (optional - defaults to account from PRIVATE_KEY)
# OWNER_ADDRESS=0xYourOwnerAddressHere